# MCP Server Configuration
# Copy this file to .env and update the values

# Your deployed API Gateway URL (proxies to Lambda function)
API_GATEWAY_URL=https://your-api-gateway-id.execute-api.eu-central-1.amazonaws.com/prod/mcp

# AWS Configuration (required for IAM authentication)
AWS_PROFILE=your-aws-profile
AWS_REGION=eu-central-1

# Optional: Override AWS credentials
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_SESSION_TOKEN=your-session-token

# Databricks Configuration (required for SQL execution)
DATABRICKS_HOST=your-databricks-host.cloud.databricks.com
DATABRICKS_HTTP_PATH=your-sql-warehouse-http-path
DATABRICKS_CLIENT_ID=your-databricks-client-id
DATABRICKS_CLIENT_SECRET=your-databricks-client-secret
